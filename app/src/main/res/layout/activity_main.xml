<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:tools="http://schemas.android.com/tools"
				xmlns:app="http://schemas.android.com/apk/res-auto"
				android:layout_width="match_parent"
				android:layout_height="match_parent"

				tools:context="com.benscholer.textbomber.MainActivity">

	<include
		android:id="@+id/toolbar"
		layout="@layout/toolbar"/>

	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:paddingLeft="@dimen/activity_horizontal_margin"
		android:paddingRight="@dimen/activity_horizontal_margin"
		android:paddingTop="@dimen/activity_vertical_margin"
		android:paddingBottom="@dimen/activity_vertical_margin"
		android:layout_below="@id/toolbar">

		<com.rengwuxian.materialedittext.MaterialEditText
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:id="@+id/phone_number"
			android:hint="Phone Number"
			app:baseColor="@color/primary_text"
			app:primaryColor="@color/accent"
			android:layout_centerHorizontal="true"
			android:inputType="phone"/>

		<com.rengwuxian.materialedittext.MaterialEditText
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:id="@+id/message_text"
			android:layout_below="@id/phone_number"
			android:hint="Message"
			app:baseColor="@color/primary_text"
			app:primaryColor="@color/accent"
			android:layout_centerHorizontal="true"
			android:inputType="textMultiLine"/>

		<com.rengwuxian.materialedittext.MaterialEditText
			android:layout_width="150dp"
			android:layout_height="wrap_content"
			android:id="@+id/repeat"
			android:layout_below="@id/message_text"
			app:baseColor="@color/primary_text"
			app:primaryColor="@color/accent"
			android:layout_centerHorizontal="true"
			android:inputType="number"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Repeat:"
			android:id="@+id/repat_text"
			android:textColor="@color/primary_text"
			android:textSize="20dp"
			android:layout_alignBottom="@+id/repeat"
			android:layout_toLeftOf="@+id/repeat"
			android:layout_marginRight="8dp"
			android:layout_marginBottom="8dp"
			android:layout_toStartOf="@+id/repeat"/>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Send"
			android:id="@+id/send_button"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="20dp"
			android:layout_below="@id/repeat"
			android:textColor="@color/primary_text"
			android:background="@drawable/button"
			android:theme="@style/Base.TextAppearance.AppCompat.Button"
			android:textAllCaps="true"
			android:fontFamily="sans-serif-medium"/>
	</RelativeLayout>
</RelativeLayout>
